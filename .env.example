# Database user
DB_USER="eventtracker"

# Database password
# Generate a strong password: openssl rand -base64 32
DB_PASSWORD="CHANGE-THIS-TO-SECURE-PASSWORD"

# Database name
DB_NAME="eventtracker"

# Database connection string
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
# In Docker Compose, use service name 'db' as host
# For external database, use the actual hostname/IP
DATABASE_URI="postgres://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}"

# PayloadCMS Secret Key
# This is used for JWT tokens and encryption
# MUST be at least 32 characters long
# Generate a secure secret: openssl rand -base64 32
PAYLOAD_SECRET="CHANGE-THIS-TO-A-RANDOM-32-CHARACTER-SECRET-KEY"

# Node.js environment (production for Docker)
NODE_ENV="production"